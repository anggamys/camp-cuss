generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int               @id @default(autoincrement())
  username                  String            @unique
  npm                       String
  password                  String
  email                     String            @unique
  driver_status             DriverStatus?     @default(pending)
  no_phone                  String
  photo_profile             String?
  role                      UserRole          @default(customer)
  photo_id_card             String?
  photo_student_card        String?
  photo_driving_license     String?
  refresh_token             String?
  created_at                DateTime          @default(now())
  updated_at                DateTime          @updatedAt

  driverLocation            DriverLocation?
  driverRequests            DriverRequest[]
  ordersAsCustomer          Order[]           @relation("CustomerOrders")
  ordersAsDriver            Order[]           @relation("DriverOrders")
  approvedDriverRequests    DriverRequest[]   @relation("AdminApprover")

  @@map("users")
}

model DriverRequest {
  id            Int               @id @default(autoincrement())
  user_id       Int
  user          User              @relation(fields: [user_id], references: [id], onDelete: Cascade)
  status        ApprovalStatus    @default(pending)
  user_notes    String?
  admin_notes   String?
  approved_by   Int?
  admin         User?             @relation("AdminApprover", fields: [approved_by], references: [id])
  created_at    DateTime          @default(now())
  updated_at    DateTime          @updatedAt

  @@map("driver_requests")
  @@index([status])
  @@index([user_id])
}

model Destination {
  id            Int         @id @default(autoincrement())
  name          String      @unique
  image_place   String?
  estimated     Int
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt

  orders        Order[]

  @@map("destinations")
}

model Order {
  id                  Int            @id @default(autoincrement())
  customer_id         Int
  driver_id           Int?
  destination_id      Int
  pick_up_location    String
  pick_up_latitude    Float
  pick_up_longitude   Float
  status              OrderStatus    @default(pending)
  payment_status      PaymentStatus  @default(pending)
  payment_method      String?
  total_price         Float          @default(0)
  created_at          DateTime       @default(now())
  updated_at          DateTime       @updatedAt

  user                User           @relation("CustomerOrders", fields: [customer_id], references: [id])
  driver              User?          @relation("DriverOrders", fields: [driver_id], references: [id])
  destination         Destination    @relation(fields: [destination_id], references: [id])

  transactions        Transaction[]  // kini satu order bisa punya banyak transaksi

  @@map("orders")
  @@index([status])
  @@index([payment_status])
  @@index([driver_id])
  @@index([customer_id])
}

model DriverLocation {
  id            Int         @id @default(autoincrement())
  driver_id     Int         @unique
  latitude      Float
  longitude     Float
  updated_at    DateTime    @updatedAt

  driver        User        @relation(fields: [driver_id], references: [id], onDelete: Cascade)

  @@map("driver_locations")
}

model Transaction {
  id               Int             @id @default(autoincrement())
  order_id         Int             
  midtrans_order   String          @unique
  transaction_id   String?         @unique
  payment_type     String?
  gross_amount     Float
  qr_url           String?
  deeplink_url     String?
  expiry_time      DateTime?
  fraud_status     String?
  status           PaymentStatus   @default(pending)
  settlement_time  DateTime?
  created_at       DateTime        @default(now())
  updated_at       DateTime        @updatedAt

  order            Order           @relation(fields: [order_id], references: [id], onDelete: Cascade)

  @@map("transactions")
  @@index([order_id])
  @@index([status])
  @@index([payment_type])
}

enum UserRole {
  customer
  driver
  admin
}

enum DriverStatus {
  pending
  approved
  rejected
}

enum ApprovalStatus {
  pending
  approved
  rejected
}

enum OrderStatus {
  pending
  canceled
  accepted
  completed
}

enum PaymentStatus {
  pending
  paid
  failed
  refunded
  expired
}
